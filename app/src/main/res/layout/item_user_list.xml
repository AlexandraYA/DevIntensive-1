<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="contentDescription">

    <data>

        <variable
            name="profile"
            type="com.softdesign.devintensive.data.storage.viewmodels.ProfileViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small_8"
        app:cardBackgroundColor="@color/color_white"
        app:cardCornerRadius="@{profile.moving ? @dimen/corner_radius_8 : @dimen/corner_radius_4}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- PhotoHolder -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.percent.PercentFrameLayout
                    android:id="@+id/photo_FL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop">

                    <!--Photo-->
                    <ImageView
                        android:id="@+id/user_photo_img"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:scaleType="centerCrop"
                        app:imageUrl="@{profile.userPhotoUri}"
                        app:layout_aspectRatio="178%"
                        app:layout_widthPercent="100%"
                        app:placeholder="@{@drawable/user_bg}"
                        app:resize_by_aspect="@{profile.moving ? 5.5f : 1.78f}" />

                </android.support.percent.PercentFrameLayout>

                <!--FullName-->
                <com.devspark.robototextview.widget.RobotoTextView
                    style="@style/Shadowed_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingBottom="@dimen/spacing_medial_24"
                    android:paddingLeft="@dimen/spacing_normal_16"
                    android:paddingRight="@dimen/spacing_normal_16"
                    android:text="@{profile.fullName}"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/font_medium_24"
                    app:typeface="roboto_medium" />

                <!-- Hometask -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="@dimen/spacing_tiny_4"
                    android:layout_marginEnd="@dimen/spacing_tiny_4"
                    android:layout_marginRight="@dimen/spacing_tiny_4"
                    android:orientation="horizontal"
                    android:visibility="@{!profile.moving}"
                    tools:ignore="RtlHardcoded">

                    <TextView
                        style="@style/Shadowed_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/spacing_tiny_4"
                        android:layout_marginRight="@dimen/spacing_tiny_4"
                        android:text="@string/header.current_homeTask"
                        android:textColor="@color/color_grey_lightest"
                        android:textColorHighlight="@color/color_accent" />

                    <TextView
                        style="@style/Shadowed_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{profile.hometask}"
                        android:textColor="@color/color_grey_lightest"
                        android:textSize="@dimen/font_normal_14" />

                </LinearLayout>

                <!--Drag and Drop place-->
                <ImageView
                    android:id="@+id/handle"
                    android:layout_width="?listPreferredItemHeight"
                    android:layout_height="match_parent"
                    android:layout_gravity="top|left"
                    android:scaleType="center"
                    android:src="@drawable/ic_menu_white"
                    tools:ignore="ContentDescription,RtlHardcoded" />

            </FrameLayout>

            <!-- ScoreBox -->
            <LinearLayout
                android:id="@+id/scoreBox_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_large_68"
                android:layout_gravity="bottom"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="@{!profile.moving}">

                <include
                    android:id="@+id/score_box_layout"
                    layout="@layout/content_score_box_layout"
                    bind:profile="@{profile}" />

            </LinearLayout>

            <!--Bio-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:maxLines="3"
                android:paddingBottom="@dimen/spacing_normal_16"
                android:paddingLeft="@dimen/spacing_normal_16"
                android:paddingRight="@dimen/spacing_normal_16"
                android:paddingTop="@dimen/spacing_small_8"
                android:text="@{profile.bio}"
                android:textColor="@color/color_grey_light"
                android:textSize="@dimen/font_normal_14"
                android:visibility="@{!profile.moving &amp;&amp; !profile.bio.isEmpty()}" />

            <!-- LineSeparator -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_size_1"
                android:layout_marginBottom="@dimen/spacing_small_8"
                android:background="@color/color_grey_light"
                android:visibility="@{!profile.moving}" />

            <!--Button View & Likes-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="@{!profile.moving}">

                <!--Button View-->
                <Button
                    android:id="@+id/btn_view_profile"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/spacing_large_64"
                    android:paddingLeft="@dimen/spacing_normal_16"
                    android:paddingRight="@dimen/spacing_normal_16"
                    android:text="@string/header.view"
                    android:textColor="@color/color_accent"
                    bind:ignore="RelativeOverlap" />

                <!--likersList-->
                <ImageButton
                    android:id="@+id/btn_more_info"
                    android:layout_width="@dimen/size_medium_48"
                    android:layout_height="@dimen/size_medium_48"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/dw_button_feed_action"
                    android:src="@drawable/ic_more_vert" />

                <!--Button Likes-->
                <RelativeLayout
                    android:id="@+id/btn_like"
                    android:layout_width="80dp"
                    android:layout_height="@dimen/size_medium_48"
                    android:layout_toLeftOf="@+id/btn_more_info"
                    tools:ignore="RelativeOverlap">

                    <!--Like Button1-->
                    <ImageView
                        android:id="@+id/btn_like_imgL"
                        android:layout_width="@dimen/size_small_24"
                        android:layout_height="@dimen/size_small_24"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/spacing_normal_16"
                        android:layout_toLeftOf="@+id/ts_LikesCount"
                        android:background="@android:color/transparent"
                        android:src="@{profile.liked ? @drawable/ic_heart_accent : @drawable/ic_heart_outline_accent}" />

                    <!--Like Button2-->
                    <ImageView
                        android:id="@+id/btn_like_imgR"
                        android:layout_width="@dimen/size_small_24"
                        android:layout_height="@dimen/size_small_24"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/spacing_normal_16"
                        android:layout_toLeftOf="@+id/ts_LikesCount"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_heart_broken_right"
                        android:visibility="gone" />

                    <!--TextSwitcher Likes Count-->
                    <TextSwitcher
                        android:id="@+id/ts_LikesCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="@dimen/spacing_normal_16"
                        android:inAnimation="@anim/slide_in_counter"
                        android:outAnimation="@anim/slide_out_counter"
                        android:textColor="@color/color_primary"
                        app:switchText="@{profile.animateTextChange ? @{String.valueOf(profile.getLikesBy.size()) : null}">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{String.valueOf(profile.getLikesBy.size())}"
                            android:textSize="@dimen/font_normal_16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_normal_16" />

                    </TextSwitcher>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>