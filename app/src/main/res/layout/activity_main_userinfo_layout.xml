<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <!-- MobilePhone -->
    <LinearLayout
        style="@style/profileItem">

        <ImageView
            style="@style/profileItem_icon.left"
            android:src="@drawable/ic_call_black_24dp"/>

        <LinearLayout
            style="@style/profileItem_infoBox">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/phone_EditText"
                    style="@style/profileItem_editText"
                    android:hint="@string/profile_phone_hint"
                    android:inputType="phone"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/makeCall_img"
            style="@style/profileItem_icon.right"
            android:src="@drawable/ic_phone_in_talk_black_24dp"/>
    </LinearLayout>

    <View style="@style/profileItem_lineSeparator"/>

    <!-- Email -->
    <LinearLayout
        style="@style/profileItem">

        <ImageView
            style="@style/profileItem_icon.left"
            android:src="@drawable/ic_email_black_24dp"/>

        <LinearLayout
            style="@style/profileItem_infoBox">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/email_EditText"
                    style="@style/profileItem_editText"
                    android:hint="@string/profile_email_hint"
                    android:inputType="textEmailAddress"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            style="@style/profileItem_icon.right"
            android:src="@drawable/ic_send_black_24dp"/>
    </LinearLayout>

    <View style="@style/profileItem_lineSeparator"/>

    <!-- VK -->
    <LinearLayout
        style="@style/profileItem">

        <ImageView
            style="@style/profileItem_icon.left"
            android:src="@drawable/ic_vk"/>

        <LinearLayout
            style="@style/profileItem_infoBox">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/vk_EditText"
                    style="@style/profileItem_editText"
                    android:hint="@string/profile_vk_hint"
                    android:inputType="textUri"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            style="@style/profileItem_icon.right"
            android:src="@drawable/ic_remove_red_eye_black_24dp"/>
    </LinearLayout>

    <View style="@style/profileItem_lineSeparator"/>

    <!-- GitHub -->
    <LinearLayout
        style="@style/profileItem">

        <ImageView
            style="@style/profileItem_icon.left"
            android:src="@drawable/ic_github_circle"/>

        <LinearLayout
            style="@style/profileItem_infoBox">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/gitHub_EditText"
                    style="@style/profileItem_editText"
                    android:hint="@string/profile_gitHubRepo_hint"
                    android:inputType="textUri"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <ImageView
            style="@style/profileItem_icon.right"
            android:src="@drawable/ic_remove_red_eye_black_24dp"/>

    </LinearLayout>

    <View style="@style/profileItem_lineSeparator"/>

    <!-- About -->
    <LinearLayout
        style="@style/profileItem">

        <ImageView
            style="@style/profileItem_icon.left"
            android:src="@drawable/ic_account_circle"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_medium_32"
            android:layout_marginRight="@dimen/spacing_normal_16"
            android:layout_weight="1"
            android:gravity="bottom"
            android:minHeight="@dimen/size_large_72"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/about_EditText"
                    style="@style/profileItem_editText"
                    android:hint="@string/profile_about_hint"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
