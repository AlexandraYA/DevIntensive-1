<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="profile"
            type="com.softdesign.devintensive.data.storage.viewmodels.ProfileViewModel" />
    </data>
    <!-- ScoreBox Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@{profile.list ? @dimen/size_large_68 : @dimen/size_huge_112, default=wrap_content}"
        android:background="@{profile.list ? @android:color/transparent : @color/color_grey}"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="@{!profile.moving}"
        app:layout_behavior="com.softdesign.devintensive.ui.view.behaviors.CustomLinearLayoutBehavior"
        app:min_collapsed_height="@dimen/size_medium_56">

        <!-- Rating -->
        <LinearLayout
            style="@style/scoreBox_sectionLayout"
            android:layout_weight="0.25">

            <TextView
                android:id="@+id/scoreBox_rating"
                style="@style/scoreBox_text.count"
                android:text="@{profile.rating}"
                android:textColor="@{profile.list ? @color/color_black : @color/color_white}" />

            <TextView
                style="@style/scoreBox_text"
                android:text="@string/header.scoreBox_ratingText"
                android:textColor="@{profile.list ? @color/color_black : @color/color_white}" />

        </LinearLayout>

        <View
            style="@style/scoreBox_lineSeparator"
            android:visibility="@{!profile.list}" />

        <!-- Lines of code -->
        <LinearLayout
            style="@style/scoreBox_sectionLayout"
            android:layout_weight="0.5">

            <TextView
                android:id="@+id/scoreBox_codeLines"
                style="@style/scoreBox_text.count"
                android:text="@{String.valueOf(profile.codeLines)}"
                android:textColor="@{profile.list ? @color/color_black : @color/color_white}" />

            <TextView
                style="@style/scoreBox_text"
                android:text="@{@plurals/codeLines(profile.codeLines)}"
                android:textColor="@{profile.list ? @color/color_black : @color/color_white}" />

        </LinearLayout>

        <View
            style="@style/scoreBox_lineSeparator"
            android:visibility="@{!profile.list}" />

        <!-- Projects -->
        <LinearLayout
            style="@style/scoreBox_sectionLayout"
            android:layout_weight="0.25">

            <TextView
                android:id="@+id/scoreBox_projects"
                style="@style/scoreBox_text.count"
                android:text="@{String.valueOf(profile.projects)}"
                android:textColor="@{profile.list ? @color/color_black : @color/color_white}" />

            <TextView
                style="@style/scoreBox_text"
                android:text="@{@plurals/projects(profile.projects)}"
                android:textColor="@{profile.list ? @color/color_black : @color/color_white}" />

        </LinearLayout>

    </LinearLayout>
</layout>