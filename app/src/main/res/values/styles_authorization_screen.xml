<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- Authorization screen -->

    <style name="authorization_LL_infoBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_medium_48</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_8</item>
    </style>

    <style name="authorization_editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/color_grey</item>
        <item name="android:textColorHint">@color/color_grey_light</item>
        <item name="android:textSize">@dimen/font_normal_14</item>
    </style>

    <style name="authorization_buttonForgotPass">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/color_grey_light</item>
        <item name="android:layout_marginTop">@dimen/spacing_small_8</item>
        <item name="android:gravity">center</item>
    </style>

</resources>