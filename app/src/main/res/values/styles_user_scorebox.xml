<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Styles for scoreBox layout -->
    <style name="scoreBox_sectionLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="scoreBox_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/font_normal_14</item>
    </style>

    <style name="scoreBox_text.shadowed" parent="scoreBox_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/font_normal_14</item>
        <item name="android:shadowColor">@color/color_black</item>
        <item name="android:shadowDx">8</item>
        <item name="android:shadowDy">8</item>
        <item name="android:shadowRadius">20</item>
    </style>

    <style name="scoreBox_text.count" parent="scoreBox_text">
        <item name="android:text">@string/dummy.scoreBox_zero_text</item>
        <item name="android:textSize">@dimen/font_medium_24</item>
    </style>

    <style name="scoreBox_text.black" parent="scoreBox_text">
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="scoreBox_text.count.black" parent="scoreBox_text.count">
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="scoreBox_lineSeparator">
        <item name="android:layout_width">@dimen/line_size_1</item>
        <item name="android:layout_height">@dimen/size_medium_56</item>
        <item name="android:background">@color/color_grey_light</item>
    </style>

</resources>