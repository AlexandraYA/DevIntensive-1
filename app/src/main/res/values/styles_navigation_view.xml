<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Navigation View -->
    <style name="navView_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_normal_14</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="navView_Text.header_Name" parent="navView_Text">
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="navView_Text.header_Email" parent="navView_Text.header_Name">
        <item name="android:fontFamily">sans-serif-regular</item>
    </style>

    <style name="navView_Text.list" parent="navView_Text">
        <item name="android:textColor">@color/color_black</item>
    </style>

    <style name="navView_Text.subHeader" parent="navView_Text">
        <item name="android:textColor">@color/color_grey</item>
    </style>
</resources>